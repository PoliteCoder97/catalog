<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/btnCall"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="project.product.ProductActivity">

        <include
            android:id="@+id/app_toolbar"
            layout="@layout/app_toolbar" />

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_toolbar"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imgProduct"
            android:scrollbarStyle="insideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<TextView-->
                    <!--android:id="@+id/txtPrice"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_gravity="left"-->
                    <!--android:layout_margin="@dimen/view_medium"-->
                    <!--android:layout_weight="0.5"-->
                    <!--android:gravity="center"-->
                    <!--android:text="200 $"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="@dimen/text_xxxlarg" />-->


                    <LinearLayout
                        android:id="@+id/llayComment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:layout_margin="@dimen/view_larg"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:layout_margin="@dimen/view_medium"
                            android:src="@drawable/comment" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Comment"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="left"
                    android:layout_margin="@dimen/view_medium"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_larg" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProduct"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:layout_margin="@dimen/view_larg"
            android:gravity="center"
            android:text="200 $"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarg" />



    </RelativeLayout>
</ScrollView>
    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00ff00"
        android:gravity="center"
        android:text="Call"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_larg" />
</RelativeLayout>