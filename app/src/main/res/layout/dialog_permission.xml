<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:background="@drawable/app_edt_background"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_margin="@dimen/view_medium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/textView6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:gravity="center"
      android:text="pick image permission"
      android:textColor="@color/black"
      android:textSize="@dimen/text_larg"
      android:layout_marginBottom="@dimen/view_xlarg"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/textView5"
      android:gravity="center"
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_medium"
      android:textColor="@color/black"
      android:text="for pick image from gallery we need this permission"
      android:layout_marginBottom="@dimen/view_larg"/>

    <LinearLayout
      android:layout_gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/view_medium"
      android:orientation="horizontal">

      <Button
        android:layout_margin="@dimen/view_medium"
        android:id="@+id/btnPermissionCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:background="@drawable/app_button"
          android:textColor="@color/white"
          android:textAllCaps="false"
        android:text="Cancel"/>

      <Button
        android:layout_margin="@dimen/view_medium"
        android:id="@+id/btnPermissionOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:background="@drawable/app_button"
          android:textColor="@color/white"
          android:textAllCaps="false"
        android:text="Ok"/>
    </LinearLayout>
  </LinearLayout>

</RelativeLayout>