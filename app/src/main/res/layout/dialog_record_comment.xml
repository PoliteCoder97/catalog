<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/dialog_background"
  android:orientation="vertical"
  >

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_small"
    android:gravity="center"
    android:text="Write Your Comment for this Product"
    android:textColor="@color/black"
    android:textSize="@dimen/text_larg"
    />

  <EditText
    android:id="@+id/edtComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/view_xxlarg"
    android:layout_marginBottom="@dimen/view_larg"
    android:textColor="@color/black"
    android:textSize="@dimen/text_medium"
    android:hint="your Comment ..."
    />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
      android:id="@+id/btnSave"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:textColor="@color/black"
      android:background="@drawable/app_button"
      android:textSize="@dimen/text_larg"
      android:text="Save"
      android:textAllCaps="false"
      android:layout_margin="@dimen/view_small"
      android:layout_height="wrap_content"/>
    <Button
      android:id="@+id/btnCancel"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:textColor="@color/white"
      android:background="@drawable/app_error_button"
      android:textSize="@dimen/text_larg"
      android:text="Cancel"
      android:textAllCaps="false"
      android:layout_margin="@dimen/view_small"
      android:layout_height="wrap_content"/>

  </LinearLayout>

</LinearLayout>