<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  android:id="@+id/llayPerson"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:elevation="@dimen/view_xlarg"
  app:cardCornerRadius="@dimen/view_xlarg"
  android:layout_margin="@dimen/view_medium"
  >

  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:adjustViewBounds="true"
      android:scaleType="centerInside"
      android:layout_weight="0.3"
      android:src="@drawable/logo"
      />

    <TextView
      android:id="@+id/textView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/view_small"
      android:layout_weight="0.7"
      android:gravity="left"
      android:layout_gravity="center"
      android:textSize="@dimen/text_larg"
      android:textColor="@color/black"
      android:text="TextView"/>
  </LinearLayout>
</android.support.v7.widget.CardView>