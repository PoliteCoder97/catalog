<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/lLayProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_small"
        android:layout_marginLeft="@dimen/view_small"
        android:layout_marginTop="@dimen/view_small"
        android:layout_marginEnd="@dimen/view_small"
        android:layout_marginRight="@dimen/view_small"
        android:layout_marginBottom="@dimen/view_small"
        app:cardCornerRadius="@dimen/view_xlarg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/colorCardBackground"-->
            <!--&gt;-->
            <ImageView
                android:id="@+id/imgAdapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/view_small"
                android:layout_weight="0.3"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />
            <!--<FrameLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="#77000000"-->
            <!--&gt;-->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/view_small"
                android:layout_weight="0.7"
                android:gravity="center"
                android:padding="@dimen/view_medium"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium" />
            <!--</FrameLayout>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>